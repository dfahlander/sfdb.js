{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "importHelpers": false,
    "target": "es5",
    "module": "es6",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"]
}
